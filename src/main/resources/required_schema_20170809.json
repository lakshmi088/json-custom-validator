{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {},
    "properties": {
        "active": {
            "type": "boolean",
            "validations": [
                {
                    "condition": "defaultValue",
                    "default": "true",
                    "failureMessage": "Default value not matched"
                }
            ]
        },
        "content": {
            "properties": {
                "disclaimer": {
                    "type": "string"
                },
                "disclaimerTemplate": {
                    "type": "string"
                },
                "linkText": {
                    "type": "string"
                },
                "linkUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "offerEndDate": {
                    "type": "string",
                    "format": "date-time",
                    "validations": [
                        {
                            "condition": "greaterThan",
                            "compareWith": "content.offerStartDate",
                            "failureMessage": "Offer End Date should be greater than Offer Start Date!"
                        }
                    ]
                },
                "offerStartDate": {
                    "type": "string",
                    "format": "date-time",
                    "validations": [
                        {
                            "condition": "lessThan",
                            "compareWith": "content.offerEndDate",
                            "failureMessage": "Offer Start Date should be less than Offer End Date!"
                        }
                    ]
                },
                "offers": {
                    "items": {
                        "properties": {
                            "bodyCopy": {
                                "type": "string"
                            },
                            "headLine": {
                                "type": "string"
                            }
                        },
                        "type": "object",
                        "required": [
                            "headLine"
                        ]
                    },
                    "type": "array"
                },
                "promoCode": {
                    "type": "string"
                },
                "redeemingChannel": {
                    "type": "string",
                    "enum": [
                        "all",
                        "online",
                        "instore"
                    ]
                }
            },
            "type": "object",
            "required": [
                "offerStartDate",
                "offerEndDate"
            ]
        },
        "contentType": {
            "type": "string"
        },
        "displayName": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "parent": {
            "type": "string"
        },
        "priority": {
            "type": "integer"
        },
        "publishingChannelApp": {
            "type": "boolean"
        },
        "publishingChannelLarge": {
            "type": "boolean"
        },
        "publishingChannelSmall": {
            "type": "boolean"
        },
        "publishingEndDate": {
            "type": "string",
            "format": "date-time",
            "validations": [
                {
                    "condition": "greaterThan",
                    "compareWith": "content.offerStartDate",
                    "failureMessage": "Publishing End Date should be greater than Offer Start Date!"
                },
                {
                    "condition": "greaterThan",
                    "compareWith": "publishingStartDate",
                    "failureMessage": "Publishing End Date should be greater than Publishing Start Date!"
                }
            ]
        },
        "publishingStartDate": {
            "type": "string",
            "format": "date-time",
            "validations": [
                {
                    "condition": "lessThan",
                    "compareWith": "content.offerEndDate",
                    "failureMessage": "Publishing Start Date should be less than Offer End Date!"
                }, {
                    "condition": "dateRange",
                    "fromDate": "2017-06-22T00:00:00-05:00",
                    "toDate": "2017-06-28T00:00:00-05:00",
                    "failureMessage": "Date must be between start and end!"
                }
            ]
        },
        "validated": {
            "type": "boolean"
        }
    },
    "type": "object",
    "required": [
        "name",
        "publishingStartDate",
        "publishingEndDate"
    ],
    "dependencies": {
        "publishingEndDate": ["publishingStartDate"]
    }
}
